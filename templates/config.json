{
	//	file paths
	//	ファイルパス
	"paths": {
		//	root directory of source files.
		//	ソースの親フォルダー
		"source": "public_html"
		//	root directory to which files are published during build.
		//	公開（ビルド）先の親フォルダー
		, "publish": "published"
	}
	//	task default configuration, used for all filesets.
	//	タスクのデフォルト設定。全てのファイルグループに対して有効。
	, "config": {
		//	LessCSS settings
		"less": {
			//	root Less files - put your top level files here
			//	親のLESSファイル。@importが書いてるファイルになります。
			"root_files": []
			//	output css minification true -> minify, false -> no minification
			//	書き出しのCSSの圧縮を有効・無効に設定できる
			, "minify": false
		}
		//	JavaScript minification settings
		, "minify_js": {
			//	replace file extension with this extension
			//	ファイル拡張子を変えたい場合はもとの[.js]以外のものにできる。
			//	Ex: for 例
			//		file.js -> file.min.js
			//	Use　この設定
			//		"ext": ".min.js"
			"ext": ".js"
		}
		//	CSS minification settings
		, "minify_css": {
			//	same as "minify_js" と同様
			"ext": ".css"
		}
		//	Text rewriting settings
		//	テキストファイルの内容書換。CSS・JSファイルのパスが変わる場合（圧縮などにより）パスを書き換えできます
		, "rewrite_text": {
			"rewrite": [
				/*
					Array of object literals as below. matches to <pattern> are rewritten
					to <replace>.
					Example 例
					{
						pattern: "([-\\._a-zA-Z0-9]+)\.less",
						replace: "$1.css"
					}
					Would rewrite
					上記の設定は下記のリンクを
					<link href="hello.less"/>
					to 下記のリンクに書き換える
					<link href="hello.css"/>
				*/
			]
			, "include": ["\\.html$", "\\.txt$", "\\.js$"]
		}
	}
	, "filesets": {
		"all": {
			//	specify files to process. if empty, all files are processed.
			//	if an array of string regexp patterns, only files matching
			//	one or more patterns will be processed.
			//	処理するファイルのパタン。空でない場合は、何かのパタンと一致しないファイルは処理されない。（公開されない）
			//	空の場合は、全てのファイルが処理される。（"exclude"のパタンと一致しない限り）
			"include": [] 
			//	specify files to exclude from processing. if empty, no files
			//	are excluded (eg all files matching rules for "include" are
			//	processed). if an array of string regexp patterns, files
			//	that match one or more patterns will be excluded from processing
			//	regardless of if they match an "include" pattern. eg,
			//	"exclude" patterns are processed first and win.
			//	処理しないファイルのパタン。空でない場合は、何かのパタンと一致するファイルは絶対処理されない。
			//	空の場合は、"include"と一致するファイルが全て処理される。
			, "exclude": []
			//	specify a list of tasks to run against the included files.
			//	実行するタスクを順番に書く。
			, "tasks" : [
				"less"
				, "minify_css"
				, "minify_js"
				, "copy"
				, "rewrite_text"
			]
			//	specify a list of other filesets that should be processed
			//	first before processing this fileset.
			//	子供のファイル・グループ。まずはこのファイルグループが処理され、それかこの中のグループが一個ずつ処理されます。
			, "filesets": []	
			//	specify custom configuration options to override the top-level
			//	configuration. options will be merged - to unset a top-level
			//	config item, set it to null.
			//	タスクの設定。デフォルトの設定を上書きます。
			, "config": {
				"less": {
					"root_files": [
						"assets/styles/bootstrap-adjust.less"
						, "assets/styles/bootstrap/bootstrap.less"
						, "assets/styles/bootstrap/responsive.less"
					],
					"minify": true
				}
				, "minify_js": {
					"ext": ".min.js"
				}, "rewrite_text": {
					"rewrite": [
						//	rewrite less <links> to refer to css files
						//	LessCSSファイルをCSSへの<link>をCSSへのリンクに書き換える。
						{
							"pattern": "(<link[^>]+?)([-\\._a-zA-Z0-9]+)\\.less"
							, "replace": "$1$2.css"
						}
						//	rewrite less rel="..." to refer to css
						, {
							"pattern": "stylesheet\\\/less"
							, "replace": "stylesheet"
						}
						//	rewrite <script> tags to refer to minified javascript files
						//	スクリプトタグを圧縮されたファイルパスに書き換える。
						, {
							"pattern": "(<script[^>]+?)([-\\._a-zA-Z0-9]+)\\.js"
							, "replace": "$1$2.min.js"
						}
					]
					//	only do "rewrite_text" for html files
					, "include": ["\\.html$"]
				}
			}
		}
	}
}